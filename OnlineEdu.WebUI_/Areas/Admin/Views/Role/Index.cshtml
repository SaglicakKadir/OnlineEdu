@model List<ResultRoleDto>
@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>
                <a asp-action="DeleteRole" asp-controller="Role" asp-area="Admin" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateRole" asp-controller="Role" asp-area="Admin" class="btn btn-outline-primary">Yeni Rol Ekle</a>


