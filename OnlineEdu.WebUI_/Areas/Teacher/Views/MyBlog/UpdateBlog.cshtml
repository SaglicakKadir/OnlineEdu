@model UpdateBlogDto
@{
    ViewData["Title"] = "Blog Güncelleme";
    Layout = "~/Areas/Teacher/Views/TeacherLayout/Index.cshtml";
}

<form method="Post">
    <input type="hidden" asp-for="BlogId" />
    <input type="hidden" asp-for="BlogDate" />
    <input type="hidden" asp-for="WriterId" />

    <label>Blog Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Resim URL</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Blog Kategorisi</label>
    <select asp-items="@ViewBag.categories" asp-for="BlogCategoryId" class="form-control">
        <option>Kategori Seçin</option>
    </select>
    <label>Blog İçeriği</label>
    <textarea type="text" asp-for="Comment" class="form-control" rows="5"></textarea>
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>
